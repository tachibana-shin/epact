{
  "name": "@epact/core",
  "description": "A simple wrapper for expressa simple wrapper for express",
  "author": "Tachibana Shin",
  "version": "0.0.9-beta.17",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pnpm format"
    }
  },
  "repository": "https://github.com/tachibana-shin/epact",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "format": "prettier -w packages/.",
    "build:epact": "pnpm -dir packages/epact build",
    "build:cli": "pnpm -dir packages/cli build",
    "build:plugin-vitest": "pnpm -dir packages/plugin-vitest build",
    "build": "pnpm build:epact && pnpm build:cli && pnpm build:plugin-vitest",
    "dev": "pnpm -r --parallel --filter=./packages/** run dev",
    "lint": "eslint packages/. --ext=.ts",
    "lint:fix": "pnpm lint --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "pnpm push && bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "test": "pnpm -r --stream run test",
    "typecheck": "tsc --noEmit",
    "push": "pnpm lint && pnpm test && pnpm changelog"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@tachibana-shin/eslint-config": "^1.0.2",
    "@types/node": "^17.0.36",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "cspell": "^6.0.0",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
